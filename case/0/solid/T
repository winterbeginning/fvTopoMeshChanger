FoamFile
{
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [ 0 0 0 1 0 0 0 ];

internalField   uniform 300;

boundaryField
{
    "(wall_bottom|solid_left|solid_right)"
    {
        type            zeroGradient;
    }
    solid_to_gas
    {
        type            coupledTemperature;
        value           $internalField;
    }
}

